{% extends 'base.html.twig' %}

{% block title %}Area index{% endblock %}

{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexAdmin') }}
    {{ encore_entry_link_tags('index') }}
{% endblock %}

{% block body %}
    <h1>Areas</h1>
    
<div class="container">

    <div id="contenedorBotonVolver" class="text-left mt-1">
        <a href="{{path('inicio_admin')}}"}} class="btn btn-outline-primary rounded-circle" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
    </div>
    {% if "DIG_ADMINISTRADOR" in roles %}
        <a href="{{ path('area_new') }}"> <button  type="button" class="btn btn-outline-info btn-sm ml-3">Agregar <i class="fa-solid fa-plus"></i></button> </a>
    {% endif %}
    <br>
    <br>
    {% for flash_message in app.session.flashbag.get('errorDeleteArea') %}
        <div class="card shadow mb-5 rounded" id="cardAdvertencia">
            <div class="flash-notice text-white font-weight-bolder text-center">
                {{ flash_message }}
            </div>
        </div>
    {% endfor %}
    <div class="table-responsive">
        <table class="table">
            <thead id="headIndex"  >
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                {% if "DIG_ADMINISTRADOR" in roles %}
                <th>Opciones</th>
                {% endif %}
            </tr>
        </thead>
        <tbody class="tbody">
            {% for area in areas %}
            <tr>
                <td>
                    {{ area.id }}
                </td>
                <td>
                    {{ area.nombre }}
                </td>
                {% if "DIG_ADMINISTRADOR" in roles %}
                <td>
                    <a  href="{{path('area_edit', {'id': area.id})  }}"><button class="btn btn-info btn-sm d-inline-block float-left mr-1"><i class="fa-solid fa-pen-to-square"></i></button></a>
                    {{ include('area/_delete_form.html.twig') }}
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
