{% extends 'base.html.twig' %}

{% block title %}TipoConsulta index{% endblock %}

{% block body %}
<h1>Tipos de consulta</h1>
<div class="table-responsive">
    <table class="table table-hover ">
        <thead class="table-active" >
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Email</th>
            {% if rol == "DIG_ADMINISTRADOR" %}
            <th>Opciones</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for tipo_consultum in tipo_consultas %}
        <tr>
            <td>
                {{ tipo_consultum.id }}
            </td>
            <td>
                {{ tipo_consultum.nombre }}
            </td>
            <td>
                {{ tipo_consultum.email }}
            </td>
            {% if rol == "DIG_ADMINISTRADOR" %}
            <td>
                <a  href="{{path('tipo_consulta_edit', {'id': tipo_consultum.id})  }}"><button class="btn btn-info btn-sm d-inline-block float-left mr-1"><i class="fa-solid fa-pen-to-square"></i></button></a>
                {{ include('tipo_consulta/_delete_form.html.twig') }}
            </td>
            {% endif %}
        </tr>
    {% else %}
        <tr>
            <td colspan="3">no se encontraron registros</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
<a href="{{ path('tipo_consulta_new') }}"> <button  type="button" class="btn btn-info btn-sm">Agregar <i class="fa-solid fa-plus"></i></button> </a>

{% endblock %}
