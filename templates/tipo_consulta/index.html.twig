{% extends 'base.html.twig' %}

{% block title %}TipoConsulta index{% endblock %}

{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexAdmin') }}
    {{ encore_entry_link_tags('index') }}
{% endblock %}
{% block body %}
<h1>Tipos de consulta</h1>
<div class="container">
    <div id="contenedorBotonVolver" class="text-left mt-1">
        <a href="{{path('inicio_admin')}}"}} class="btn btn-outline-primary rounded-circle" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
    </div>
    {% if "DIG_ADMINISTRADOR" in roles %}
        <a href="{{ path('tipo_consulta_new') }}"> <button title="NUEVO TIPO DE CONSULTA" type="button" class="btn btn-outline-info btn-sm ml-3">Agregar <i class="fa-solid fa-plus"></i></button> </a>
    {% endif %}
    <br>
    <br>
    {% for flash_message in app.session.flashbag.get('errorDeleteConsulta') %}
        <div class="card shadow mb-5 rounded" id="cardAdvertencia">
            <div class="flash-notice text-white font-weight-bolder text-center">
                {{ flash_message }}
            </div>
        </div>
    {% endfor %}
<div class="table-responsive">
    <table class="table" id="tablaIndex">
        <thead id="headIndex" >
        <tr>
            <th class="thOp">Id</th>
            <th class="thOp">Nombre</th>
            <th class="thOp">Email</th>
            {% if "DIG_ADMINISTRADOR" in roles %}
            <th class="thOp">Opciones</th>
            {% endif %}
        </tr>
    </thead>
    <tbody class="tbody">
        {% for tipo_consultum in tipo_consultas %}
        <tr>
            <td>
                {{ tipo_consultum.id }}
            </td>
            <td>
                {{ tipo_consultum.nombre }}
            </td>
            <td>
                {{ tipo_consultum.email }}
            </td>
            {% if "DIG_ADMINISTRADOR" in roles %}
            <td>
                <a  href="{{path('tipo_consulta_edit', {'id': tipo_consultum.id})  }}"><button title="EDITAR" class="btn btn-info btn-sm d-inline-block float-left mr-1"><img src="{{asset('/Editar.png')}}"  alt="" id="auditoriaIcon"></button></a>
                {{ include('tipo_consulta/_delete_form.html.twig') }}
            </td>
            {% endif %}
        </tr>
    {% else %}
        <tr>
            <td colspan="3">no se encontraron registros</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
</div>

{% endblock %}
