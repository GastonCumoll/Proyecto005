<form method="post" action="{{ path('item_delete', {'id': item.id}) }}" onsubmit="return confirm('Estás por eliminar este Item, las normas y los demas items atados a él las heredará el padre. ¿Desea proseguir?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
    <button title="ELIMINAR" class="btn btn-danger btn-sm d-inline"><i class="fa-solid fa-trash-can">
</form>
