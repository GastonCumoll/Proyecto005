{% extends 'base.html.twig' %}

{% block title %}TipoNorma index{% endblock %}

{% block body %}
<header class="headerAdmin">{{ include('baseAdmin.html.twig') }}</header>
    <h1>Tipos de norma</h1>
    <a href="{{ path('tipo_norma_new') }}"> <button  type="button" class="btn btn-dark btn-sm">Alta de tipo de norma</button> </a>
    <br>
    <br>
    <div class="table-responsive">
        <table class="table table-hover ">
            <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for tipo_norma in tipo_normas %}
            <tr>
                <td>{{tipo_norma.id}}</td>
                <td>
                    {{tipo_norma.nombre}}
                </td>
                <td>
                    <a href="{{ path('tipo_norma_show', {'id': tipo_norma.id}) }}"><i class="fa-solid fa-binoculars"></i></a>
                    <a href="{{ path('tipo_norma_edit', {'id': tipo_norma.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
 
{% endblock %}
