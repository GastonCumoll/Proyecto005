{% extends 'base.html.twig' %}

{% block title %}Etiqueta index{% endblock %}

{% block body %}
<header class="headerAdmin">{{ include('baseAdmin.html.twig') }}</header>
    <h1>Etiquetas</h1>
    
    <a href="{{ path('etiqueta_new') }}"> <button  type="button" class="btn btn-dark btn-sm">Nueva etiqueta</button> </a>
    <br>
    <br>

    <table class="table table-hover table-sm table-bordered ">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for etiquetum in etiquetas %}
                <tr>
                    <td>
                        <a href="{{ path('etiqueta_show', {'id': etiquetum.id}) }}">{{etiquetum.nombre}}</a>
                    </td>
                    <td>
                        <a href="{{ path('etiqueta_edit', {'id': etiquetum.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    

    
{% endblock %}
