{% extends 'base.html.twig' %}

{% block title %}Etiqueta index{% endblock %}
{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexAdmin') }}
    {{ encore_entry_link_tags('index') }}
{% endblock %}
{% block body %}

    <h1>Etiquetas</h1>

    <div class="container">

        <div id="contenedorBotonVolver" class="text-left mt-1">
            <a href="{{path('inicio_admin')}}"}} class="btn btn-outline-primary rounded-circle" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
        </div>
        {% if "DIG_ADMINISTRADOR" in roles %}
            <a href="{{ path('etiqueta_new') }}"> <button title="NUEVA ETIQUETA" type="button" class="btn btn-outline-info btn-sm ml-3">Agregar <i class="fa-solid fa-plus"></i></button> </a>
        {% endif %}
            <div class="input-group float-right ml-auto mr-2">
                <input type="text" class="form-control col-5 float-right" id="busquedaParam" value="" placeholder="   Nombre" aria-label="Input group example" aria-describedby="btnGroupAddon2">
                <i class="fa-solid fa-magnifying-glass" id="iconoLupa"></i>
            </div>
        
    <div class="container">
        


        {# //selectpicker
            <div class="container">
            <div class="row">
                <div class="col-7 col-md-5">
                    <button class="boton btn-info btn-sm" id="btnBusquedaParam"><i class="fa-solid fa-magnifying-glass"></i></button>
                        <select id="selectpickerEti" class="selectpicker" name="selecEtiqueta" data-live-search="true">
                            {% for unaEtiqueta in etiquetas %}
                                <option data-tokens="a" value="{{unaEtiqueta.nombre}}" id="etiquetaId">{{unaEtiqueta}}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div> #}
    </div>
    <br>

    <div class="table-responsive">
        <table class="table" id="tablaIndex">
            <thead  id="headIndex">
            <tr>
                <th>{{ knp_pagination_sortable(etiquetas, 'Id', 'p.id') }}</th>
                <th>{{knp_pagination_sortable(etiquetas, 'Nombre', 'p.nombre')}}</th>
                {% if "DIG_ADMINISTRADOR" in roles %}
                <th class="thOp">Acciones</th>
                {% endif %}
            </tr>
        </thead>
        <tbody class="tbody">
            {% for etiquetum in etiquetas %}
                <tr>
                    <td>
                        {{etiquetum.id}}
                    </td>
                    <td>
                        {{etiquetum.nombre}}
                    </td>
                    {% if "DIG_ADMINISTRADOR" in roles %}
                    <td>
                        <a  href="{{path('etiqueta_edit', {'id': etiquetum.id})  }}"><button title="EDITAR" class="btn btn-info btn-sm d-inline-block float-left mr-1"><img src="{{asset('/Editar.png')}}"  alt="" id="auditoriaIcon"></button></a>
                        {{ include('etiqueta/_delete_form.html.twig') }}
                    </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no se encontraron registros</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(etiquetas) }}
    </div>

    </div>
</div>

    {% block javascripts %}
    {{ parent() }}
    {{encore_entry_script_tags('busquedaParamEtiqueta')}}
    
    {% endblock %}
    
{% endblock %}
