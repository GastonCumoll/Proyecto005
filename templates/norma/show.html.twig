                    <div class="headerPdf">
                        <div class="row">
                            <div class="col-12 findAndSeek">
                                <div class="ml-5 contenedorBotonPDF">
                                    <a target="_blank" href="{{path('mostrar_pdf', {'id': norma.id})  }}"><button type="button" id="verPdf" class="btn"><strong>VER PDF </strong><i class="fas fa-file-pdf"></i></button></a>
                                </div>
                                <div class="input-group" id="busqueda-input-texto">
                                    <input type="text" class="form-control" id="busquedaTexto" value="" placeholder="Buscar en el texto" aria-label="Input group example" aria-describedby="btnGroupAddon2">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-left mt-3 mb-3 mr-2 ml-2" style="border-radius: 0.25rem!important;" id="alertFiltro"></div>
                    <div class="card-body">
                        <div class="text-justify" id="parrafo">
