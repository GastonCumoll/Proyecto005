{% macro recursiveCategory(itemHijo, norma ) %}
    
    {% import _self as self %} 
    
        {% if itemHijo.padre != null %}
        
            {{ self.recursiveCategory(itemHijo.padre, norma) }} <i class="fa-solid fa-angle-right"></i>
            {{itemHijo.nombre}}
        {% else %}
            {% if itemHijo.nombre == 'NORMAS VIGENTES' %}
                <a href="{{path('indice_vigente')}}"class="alert-link"> {{ itemHijo.nombre }}</a>
            {% else %}
                <a href="{{path('indice_no_vigente')}}"class="alert-link"> {{ itemHijo.nombre }}</a>
            {% endif %}
        {% endif %}
        
{% endmacro %}

{% from _self import recursiveCategory %}
    {% from _self import mostrarNorma %}
