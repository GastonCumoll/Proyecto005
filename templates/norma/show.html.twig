{% endblock %}

{% for flash_message in app.session.flashbag.get('verifPublicar') %}
        <div class="card shadow mb-5 rounded" id="cardAdvertencia">
            <div class="flash-notice text-white font-weight-bolder text-center">
                {{ flash_message }}
            </div>
        </div>
    {% endfor %}

    <div class="container mt-3 mb-3">
        <div class="card text-center shadow mb-5 bg-white rounded" id="cardGeneral">
                {% if norma.estado == "Borrador" %}
                    <div class="card-header text-center" id="headerText">
                        <div id="contenedorBotonVolver" class="text-left mt-1">
                            <a class="btn btn-primary rounded-circle botonAtras" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
                        </div>
                            <th>{{norma.tipoNorma.nombre}} N° </th>
                            {% if norma.numeroAuxiliar != null  %}
                                {{ norma.numeroAuxiliar }}(borrador)
                            {% else %}
                                {{ "----" }}
                            {% endif %}
                    </div>
                {% elseif norma.estado == "Lista" %}
                    <div class="card-header text-center" id="headerText">
                        <div id="contenedorBotonVolver" class="text-left mt-1">
                            <a class="btn btn-primary rounded-circle botonAtras" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
                        </div>
                            <th>{{norma.tipoNorma.nombre}} N° </th>
                            {% if norma.numeroAuxiliar != null  %}
                                {{ norma.numeroAuxiliar }}
                            {% else %}
                                {{ "----" }}
                            {% endif %}
                    </div>
                {% else %}
                    <div class="card-header text-center" id="headerText">
                        <div id="contenedorBotonVolver" class="text-left mt-1">
                            <a href="{{path('norma_index')}}" class="btn btn-primary rounded-circle botonAtras" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
                        </div>
                            <th>{{norma.tipoNorma.nombre}} N° </th>
                            {% if norma.numeroAuxiliar != null  %}
                                {{ norma.numeroAuxiliar }}
                            {% else %}
                                {{ "----" }}
                            {% endif %}
                    </div>
                {% endif %}
                <div class="card-body">

                <h5 class="card-title">{{ norma.titulo }}</h5>
                {# <p class="card-text text-left">Fecha de sanción: {{ norma.fechaSancion ? norma.fechaSancion|date('Y-m-d') : '' }}</p> #}
                {% if norma.fechaSancion %}
                    <p class="card-text text-left"><strong>Fecha de sanción: </strong>{{ norma.fechaSancion ? norma.fechaSancion|date('d-m-Y') : '' }}</p>
                {% endif %}
                {% if norma.fechaPromulgacion %}
                    <p class="card-text text-left"><strong>Fecha de promulgación: </strong>{{ norma.fechaPromulgacion ? norma.fechaPromulgacion|date('d-m-Y') : '' }}</p>
                {% endif %}
                {% if norma.fechaPublicacionBoletin %}
                <p class="card-text text-left"><strong>Fecha de publicación Boletín: </strong>{{ norma.fechaPublicacionBoletin ? norma.fechaPublicacionBoletin|date('d-m-Y') : '' }}</p>
                {% endif %}
                {% if norma.estado =="Publicada" %}
                    <p class="card-text"><strong>Fecha de publicación: </strong>{{ norma.fechaPublicacion ? norma.fechaPublicacion|date('d-m-Y') : '' }}</p>
                {% endif %}
                <p class="card-text text-left"><strong>Resumen: </strong>{{ norma.resumen }}</p>

                {# block de archivos: #}
                {% if norma.archivos|length > 0 %}
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <div class="card mt-3 mb-1" id="cardArchivos">
                                <div class="card-body">
                                    <h5 id="h5Archivos" class="">Archivos adjuntos</h5>
                                    {# {% if "DIG_OPERADOR" in roles and norma.estado == "Borrador" and usuarioReparticion == 1 %}
                                    <div class="contenedorBotonMas">
                                        <a href="{{path('agregar_archivo', {'id': norma.id})  }}" class="btn btn-secondary btn-sm" id="botonMas"><i class="fas fa-solid fa-plus iconoMas"></i></a>
                                    </div> 
                                    {% endif %}#}
                                    {# {% if "DIG_EDITOR" in roles and (norma.estado == "Lista" or norma.estado == 'Publicada') and usuarioReparticion == 1 %}
