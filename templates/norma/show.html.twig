                                        {# {% if ("DIG_OPERADOR" in roles and norma.estado != "Publicada" and usuarioReparticion == 1) or ("DIG_EDITOR" in roles and (norma.estado == "Publicada" or norma.estado == 'Lista') and usuarioReparticion == 1) %}
