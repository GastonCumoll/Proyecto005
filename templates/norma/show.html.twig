{% block body %}

{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('normaShow') }}
    {{ encore_entry_link_tags('scrollCss') }}
{% endblock %}


<div id="myModal" class="modalContainer">
    <div class="modal-content">
        <span class="close">×</span>
        <div class="text-center">
            <h2>Desea generar un PDF del texto ordenado?</h2>
            <h6 class="mt-3">Al presiona "SI" se creará una copia del texto de la norma actual en un archivo PDF y deberá editar el texto de la norma.
                Al presionar "NO" solamente podrá editar los datos de la norma pero no su texto. 
            </h6>
            <div id="botones" class="text-center mt-5">
                <a class="btn btn-primary w-25" id="botonNo">No</a>
                <a class="btn btn-success w-25" id="botonSi">Si</a>
            </div>
        </div>
    </div>
</div>
{# <div id="contenedorBotonVolver">
    <a href={{app.request.headers.get('referer')}} class="btn btn-primary rounded-circle"><span id="estilo-boton"><i class="fa-solid fa-chevron-left"></i></span></a>
</div> #}
    <div class="container mt-3 mb-3">
        
        <div class="card text-center shadow mb-5 bg-white rounded">
            
            {% if norma.numero != null  %}
                {% if norma.estado == "Borrador" %}
                
                    <div class="card-header bg-warning text-left">
                        <div id="contenedorBotonVolver" class="text-left mt-1">
                            <a class="btn btn-primary rounded-circle" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
                        </div>
                        <h4 class="h4 float-right">
                            <th>{{norma.tipoNorma.nombre}} N° </th>
                        {{ norma.numero }}(borrador)
                        </h4>
                    </div>
                {% elseif norma.estado == "Lista" %}
                    <div class="card-header bg-success text-left">
                        <div id="contenedorBotonVolver" class="text-left mt-1">
                            <a class="btn btn-primary rounded-circle" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
                        </div>
                        <h4 class="h4 float-right">
                            <th>{{norma.tipoNorma.nombre}} N° </th>
                            {{ norma.numero }} 
                        </h4>
                    </div>
                {% else %}
                    <div class="card-header text-left">
                        <div id="contenedorBotonVolver" class="text-left mt-1">
                            <a href="{{path('norma_index')}}" class="btn btn-primary rounded-circle" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
                        </div>
                        <h4 class="h4 float-right">
                            <th>{{norma.tipoNorma.nombre}} N° </th>
                            {{ norma.numero }}
                        </h4>
                    </div>
                {% endif %}
            {% endif %}
            
            <div class="card-body">
                <h5 class="card-title text-center">{{ norma.titulo }}</h5>
                <p class="card-text text-left">Fecha de sanción: {{ norma.fechaSancion ? norma.fechaSancion|date('Y-m-d') : '' }}</p>
                <p class="card-text text-left">Fecha de publicacion: {{ norma.fechaPublicacion ? norma.fechaPublicacion|date('Y-m-d') : '' }}</p>
                <p class="card-text text-left">Resumen: {{ norma.resumen }}</p>
                <br>

                <div class="card " style="width: 100%;text-align:justify">
                    <div class="card-body">
                        <h5 id="h5Archivos" class="card-title text-center">Archivos adjuntos</h5>
                        {% if rol == "DIG_OPERADOR" and norma.estado == "Borrador" and usuarioReparticion == 1 %}
                            <a href="{{path('agregar_archivo', {'id': norma.id})  }}" class="btn btn-secondary btn-sm" id="botonMas"><i class="fas fa-solid fa-plus"></i></a>
                        {% endif %}
                        {% if rol == "DIG_EDITOR" and norma.estado == "Lista" and usuarioReparticion == 1 %}
                            <a href="{{path('agregar_archivo', {'id': norma.id})  }}" class="btn btn-secondary btn-sm" id="botonMas"><i class="fas fa-solid fa-plus"></i></a>
                        {% endif %}
                        {% for unPdf in norma.archivos %}
                        <div>
                            <a href="{{asset('uploads/' ~ unPdf.ruta)  }}" class="">{{unPdf.nombre}} <i class="fas fa-file-pdf"></i></a>
                            <br>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div style="text-align:left ;">
                    <i class="fa-solid fa-tags"></i>Etiquetas:
                    {% for etiqueta in norma.etiquetas %}
                        <a href="{{path('busqueda_id_etiqueta',{'id':etiqueta.getId})}}">{{etiqueta}}  </a> |
                    {% endfor %}
                    <br>
                    <i class="fa-solid fa-user"></i>Publicado por :
                    {{user}}
                </div>
                <br>
                
                <div class="container" id="containerBotones">
                    {# <div class="divBotones mt-3 mr-2">
                        <a href="{{path('mostrar_texto', {'id': norma.id})  }}" class="btn btn-primary botones" >Ver texto ordenado</a>
                    </div> #}
                    
                    <div class="divBotones mt-3 mr-2">
                        <a target="_blank" href="{{path('mostrar_pdf', {'id': norma.id})  }}" class="btn btn-danger botones">Ver texto en pdf <i class="fas fa-file-pdf"></i></a>
                    </div>
                    {% if rol == "DIG_OPERADOR" and norma.estado == "Borrador" and usuarioReparticion == 1 %}
                        <div class="divBotones mt-3 mr-2">
                            <a><button type="button" class="btn btn-success botones editar" value="{{norma.id}}" id="editar">Editar</button></a>
                        </div>
                        <div class="divBotones mt-3 mr-2">
                            <a href="{{ path('form_rela_edit', {'id': norma.id}) }} "><button type="button" class="btn btn-success botones"> Agregar relacion</button></a>
                        </div>
                        <div class="divBotones mt-3 mr-2">
                            {{ include('norma/_delete_form.html.twig') }}
                        </div>
                    {% endif %}
                    {% if rol == "DIG_EDITOR" and norma.estado == "Lista" and usuarioReparticion == 1 %}
                        <div class="divBotones mt-3 mr-2">
                            <a><button type="button" class="btn btn-success botones editar" value="{{norma.id}}" id="editar">Editar</button></a>
                        </div>
                        <div class="divBotones mt-3 mr-2">
                            <a href="{{ path('form_rela_edit', {'id': norma.id}) }} "><button type="button" class="btn btn-success botones"> Agregar relacion</button></a>
                        </div>
                    {% endif %}
                </div>
                <div class="card-footer text-left mt-3">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Relacion</th>
                                <th scope="col">Norma</th>
                                {% if rol == "DIG_OPERADOR" and norma.estado != "Publicada" and usuarioReparticion == 1 %}
                                <th scope="col">Edit</th>
                                {% endif %}
                            </tr>
                        </thead>
                                {% for rela in relacion %}
                                <tbody>
                                    <tr>
                                        <td>{{rela.getTipoRelacion.getNombre}}</td>
                                        <td> <a href="{{path('norma_show', {'id': rela.getComplementada.getId}) }}">{{rela.getComplementada.getTitulo}}</a></td>
                                        {% if rol == "DIG_OPERADOR" and norma.estado != "Publicada" and usuarioReparticion == 1 %}
                                        <td><a href="{{path('relacion_edit', {'id':norma.id,'idA':rela.getComplementada.getId,'idR':rela.getId})}}"><i class="fas fa-solid fa-pen"></i></a></td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <td>Observaciones</td>
                                        <td>{{rela.getDescripcion}}</td>
                                    </tr>
                                </tbody>
                            {% endfor %}
                    </table>
                </div>
                <div class="text-justify">
                    {{(norma.texto) | purify}}
                </div>
                <div class=" divBotonVolver mt-4  text-left d-inline">
                    {# <a href={{app.request.headers.get('referer')}}><button type="button" class="btn btn-primary" id="botonVolver"><i class="fas fa-arrow-left"></i> Volver</button></a> #}
                    {% if norma.estado == "Borrador" and usuarioReparticion == 1 and rol =="DIG_OPERADOR" %}
                        <form action="{{path('updateInstancia')}}" method="post">
                            <input type="hidden" name="normaId" value="{{norma.id}}">
                            <button type="submit" class="btn btn-danger" id="botonVolver">Finalizar revisión<i class="fa-solid fa-check"></i></button>
                        </form>
                        
                    {% endif %}
                    {% if norma.estado == "Lista" and usuarioReparticion == 1 and rol =="DIG_EDITOR" %}
                    <a href="{{path('back_borrador',{'id':norma.id})}}"><button type="button" class="btn btn-danger" id="botonVolver">Mandar a borrador<i class="fa-solid fa-backward"></i></button></a>
                    <form action="{{path('updateInstancia')}}" method="post">    
                        <label><input type="checkbox" id="cbox1" name="checkbox" value="true">Publicar interno</label>
                        <input type="hidden" name="normaId" value="{{norma.id}}">
                        <button type="submit" class="btn btn-danger" id="botonVolver">Publicar<i class="fa-solid fa-check-double"></i></button>
                    </form>
                    {% endif %}
                    {% if norma.estado == "Publicada" and  rol == "DIG_ADMINISTRADOR" %}
                        <form action="{{path('updateInstancia')}}" method="post">
                            <input type="hidden" name="normaId" value="{{norma.id}}">
                            <button type="submit" class="btn btn-danger" id="botonVolver">Mandar a borrador<i class="fa-solid fa-backward"></i></button></a>
                        </form>
                        {# <a href="{{path('updateInstancia')}}"><button type="button" class="btn btn-danger" id="botonVolver">Mandar a borrador<i class="fa-solid fa-backward"></i></button></a> #}
                    {% endif %}
                </div>
            </div>
        </div>
        
    </div>
    <div>
        <span class="ir-arriba"><i class="fa-solid fa-circle-chevron-up"></i></span>
    </div>
{% block javascripts %}
        {{ parent() }}
        {{encore_entry_script_tags('normaEdit')}}
        {{encore_entry_script_tags('scroll')}}
    {% endblock  %}  
{% endblock %}
