                                        <a href="{{path('agregar_archivo', {'id': norma.id})  }}" class="btn btn-secondary btn-sm" id="botonMas"><i class="fas fa-solid fa-plus iconoMas"></i></a>
                                    </div>
                                    {% endif %} #}
                                    {% for unPdf in norma.archivos %}
                                        <div class="mt-2">
                                            {% if unPdf.tipo == 'pdf' %}
                                                <a target="_blank" href="{{asset('uploads/' ~ unPdf.ruta)  }}"id="linkArchivo">{{unPdf.nombre}} <i class="fas fa-file-pdf"></i></a>
                                            {% elseif unPdf.tipo == 'docx' or unPdf.tipo == 'txt'  %}
                                                <a target="_blank" href="{{asset('uploads/' ~ unPdf.ruta)  }}" id="linkArchivo">{{unPdf.nombre}}<i class="fa-solid fa-file-word"></i></a>
                                            {% else %}
                                                <a target="_blank" href="{{asset('uploads/' ~ unPdf.ruta)  }}" id="linkArchivo">{{unPdf.nombre}}</a>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                {% endif %}
                    
                {# <br> #}
                {% if norma.etiquetas|length > 0 %}
                    <p class="card-text text-left mt-2"><strong><i class="fa-solid fa-tags"></i>Etiquetas:</strong>
                    {% for etiqueta in norma.etiquetas %}
                        <a href="{{path('busqueda_id_etiqueta',{'id':etiqueta.getId})}}">{{etiqueta}}  </a> |
                    
                    {% endfor %}
                </p>
                {% endif %}
                
                {% if norma.estado == "Publicada" and user|length > 0 %}
                <p class="card-text text-left"><strong><i class="fa-solid fa-user"></i>Publicado por :
                    {{user}}</strong></p>
                {% endif %}
