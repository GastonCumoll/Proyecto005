{% extends 'base.html.twig' %}

{% block title %}Edit Norma{% endblock %}

{% block body %}

{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('createCss') }}
{% endblock %}

    <h1>Agregar archivo</h1>
    <div class="container text-left" >
        {% for flash_message in app.session.flashbag.get('archivoMaxSize') %}
            <div class="card shadow mb-5 rounded" id="cardAdvertencia">
                <div class="flash-notice text-white font-weight-bolder text-center">
                    {{ flash_message }}
                </div>
            </div>
        {% endfor %}
        <div class="mt-3 p-3 border border-secondary rounded bg-light shadow mb-5 bg-white ">
        {{ form_start(form)}}
            <div class="row mt-2">
                <div class="col-12 col-md-6 mb-3">
                    {{ form_label(form.archivo)}}
                    {{ form_widget(form.archivo)}}
                </div>
                <div class="col-12 col-md-6 mb-3">
                    {{ form_label(form.nombre)}}
                    {{ form_widget(form.nombre)}}
                </div>
            </div>
            <input type="hidden" id="id" value="{{norma.id}}">
            <input type="hidden" id="idNombre" value="{{norma.titulo}}">
            <a href="{{ path('norma_showEdit', {'id': norma.id})}}" class="btn btn-primary mt-2 mb-2">Volver</a>
            <button class="btn btn-success mt-2 mb-2">{{ button_label|default('Confirmar') }}</button>
        {{ form_end(form) }}
</div>
</div>
    {% block javascripts %}
        {{ parent() }}
        {{encore_entry_script_tags('etiqueta')}}
        {{encore_entry_script_tags('datepicker')}}
    {% endblock  %} 
{% endblock %}