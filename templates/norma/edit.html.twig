    <h1>Editar Norma</h1>
    <div class="container"  id="tarjeta">
        <div class="container">
            <h5 class="h5">Los campos con (*) son obligatorios</h5>
    {{ include('norma/_form.html.twig') }}
    {% if "/norma/borrador" in  app.request.headers.get('referer') %}
        <input type="hidden" name="urlAnterior" value="{{'borrador'}}">
    {% endif %}
    {% if "/norma/listas" in  app.request.headers.get('referer') %}
        <input type="hidden" name="urlAnterior" value="{{'listas'}}">
    {% endif %}
    {% if "/norma/" ~ norma.id in  app.request.headers.get('referer') %}
        <input type="hidden" name="urlAnterior" value="norma_show">
    {% endif %}
    <select id="selectIds">
        {% for unId in idT %}
            <option value={{unId.id}}>hola</option>
        {% endfor %}
    </select>
    <input type="hidden" id="id" value="{{norma.id}}">
    <input type="hidden" id="idNombre" value="{{norma.titulo}}">
    <a href="{{app.request.headers.get('referer')}}" class="btn btn-primary mt-2 mb-2">Volver</a>
</div>
</div>
    <script>
        switch ("{{ norma.tipoNorma.nombre}}") {
            case 'Decreto':
                var selectTipoNorma = document.getElementById("decreto_type_edit_tipoDeNorma");
                break;
            case 'Ley': 
                var selectTipoNorma = document.getElementById("ley_type_edit_tipoDeNorma");
                break;
            case 'Ordenanza':
                var selectTipoNorma = document.getElementById("ordenanza_type_edit_tipoDeNorma");
                break;
            case 'Directiva':
                var selectTipoNorma = document.getElementById("directiva_type_edit_tipoDeNorma");
                break;
            case 'Disposici√≥n':
                var selectTipoNorma = document.getElementById("disposicion_type_edit_tipoDeNorma");
                break;
            case 'Resolucion':
                var selectTipoNorma = document.getElementById("resolucion_type_edit_tipoDeNorma");
