{% extends 'base.html.twig' %}

{% block title %}Edit Norma{% endblock %}

{% block body %}

{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('createCss') }}
{% endblock %}

    <h1>Editar Norma</h1>
    <div class="container"  id="tarjeta">
        <div class="container">
            <h5 class="h5">Los campos con (*) son obligatorios</h5>
    {{ include('norma/_form.html.twig') }}
    {% if "/norma/borrador" in  app.request.headers.get('referer') %}
        <input type="hidden" name="urlAnterior" value="{{'borrador'}}">
    {% endif %}
    {% if "/norma/listas" in  app.request.headers.get('referer') %}
        <input type="hidden" name="urlAnterior" value="{{'listas'}}">
    {% endif %}
    {% if "/norma/" ~ norma.id in  app.request.headers.get('referer') %}
        <input type="hidden" name="urlAnterior" value="norma_show">
    {% endif %}

    
    <input type="hidden" id="id" value="{{norma.id}}">
    <input type="hidden" id="idNombre" value="{{norma.titulo}}">
    <a href="{{app.request.headers.get('referer')}}" class="btn btn-primary mt-2 mb-2">Volver</a>
</div>
</div>
    {% block javascripts %}
        {{ parent() }}
        {{encore_entry_script_tags('etiqueta')}}
        {{encore_entry_script_tags('datepicker')}}

    {% endblock  %} 
{% endblock %}
    