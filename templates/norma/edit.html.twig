{% extends 'base.html.twig' %}

{% block title %}Edit Norma{% endblock %}

{% block body %}

{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('createCss') }}
{% endblock %}

    <h1 class="font-weight-bold text-center">Editar Norma</h1>
    <div class="container">
        <div class="mt-3 p-3 border border-secondary rounded bg-light shadow mb-5 bg-white ">
            <h5>Los campos con (*) son obligatorios</h5>
            {{ include('norma/_form.html.twig') }}
            
            <input type="hidden" id="id" value="{{norma.id}}">
            <input type="hidden" id="idNombre" value="{{norma.titulo}}">
            <a href="{{app.request.headers.get('referer')}}" class="btn btn-primary mt-2 mb-2">Cancelar</a>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        {{encore_entry_script_tags('etiqueta')}}
        {{encore_entry_script_tags('datepicker')}}
        {# {{encore_entry_script_tags('etiquetasNormaEdit')}} #}
    {% endblock  %} 
{% endblock %}
    