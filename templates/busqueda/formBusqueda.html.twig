{% extends 'base.html.twig' %}

{% block title %}Norma index{% endblock %}


{% block body %}
{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('formularioBusqueda') }}
    {{ encore_entry_link_tags('spinnerCss') }}
{% endblock %}



<div class="container mt-5" id="containerFormulario">
        <form action="{{path('formulario_busqueda_result')}}" method="get" name="formulario">
            <div class="contenedor-inputs">
                <div class="form-row mb-2">
                    <div class="col-1"></div>
                <div class="col-5">
                    <div class="form-row align-items-center">
                        <div class="col-auto">
                            <div id="tituloInput">Título </div>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" id="titulo" name="titulo"
                                    placeholder="Título" />
                            </div>
                        </div>
                    </div>
                </div>
                {# <div class="col-1"></div> #}
                <div class="col-6">
                    <div class="form-row align-items-center">
                        <div class="col-auto">
                            <div id="tituloInput">Tipo </div>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <select title="Seleccionar" name="tipoNorma" id="TipoNorma" class="form-control selectpicker" data-live-search="true">
                                    <option ></option>
                                    {% for tipo in tipoNormas %}
                                        <option value={{tipo.getId()}}>{{tipo.getNombre()}}</option>    
                                    {% endfor %}
                                </select>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-1"></div>
                <div class="col-5">
                    <div class="form-row align-items-center">
                        <div class="col-auto">
                            <div id="tituloInput">Número </div>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <input type="number" class="form-control form-control-sm" id="numero" name="numero"
                                    placeholder="Número" />
                            </div>
                        </div>
                    </div>
                </div>
                {# <div class="col-1"></div> #}
                <div class="col-6">
                    <div class="form-row align-items-center">
                        <div class="col-auto">
                            <div id="tituloInput">Año </div>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <div class="input-group">
                                    <input type="number" class="form-control form-control-sm" id="año" name="año"
                                        placeholder="Año" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-1"></div>
            <div class="col-5">
                <div class="form-row align-items-center">
                    <div class="col-auto">
                        <div id="tituloInput">Texto </div>
                    </div>
                    <div class="col">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm" id="texto" name="texto"
                                placeholder="Texto" />
                        </div>
                    </div>
                </div>
            </div>
            {# <div class="col-1"></div> #}
            <div class="col-6">
                <div class="form-row align-items-center select">
                    <div class="col-auto etiquetas">
                        <div id="tituloInput">Etiquetas </div>
                    </div>
                    <div class="col etiquetas-col">
                        <div class="input-group select select-input">
                        {#<select multiple name="etiquetas[]" id="etiquetas" class="form-control selectpicker" data-live-search="true" data-size="20">#}
                            <select class="js-example-basic-multiple" name="etiquetas[]" multiple="multiple">
                                {# <option selected></option> #}
                                {% for etiqueta in etiquetas %}
                                    <option value="{{etiqueta.getId()}}">{{etiqueta.getNombre()}}</option>    
                                {% endfor %}
                            </select>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
            <div class="text-center">
                <a class="btn btn-sm btn-outline-secondary cargando buscarNorma"><div id="botoncito"><i class="fa fa-search"></i> BUSCAR</div></a>
            </div>
        </div>
        </form>

</div>

{% block javascripts %}
        {{encore_entry_script_tags('etiqueta')}}
        {{encore_entry_script_tags('normaEdit')}}
        {{encore_entry_script_tags('spinnerJs')}}
{% endblock %}
{% endblock %}