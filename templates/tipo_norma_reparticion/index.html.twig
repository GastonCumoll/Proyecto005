{% extends 'base.html.twig' %}

{% block title %}TipoNormaReparticion index{% endblock %}

{% block body %}
    <h1>Reparticiones del tipo de norma {{tipoNorma.nombre}}</h1>

    <div class="table-responsive">
        <table class="table table-hover ">
            <thead class="table-active" >
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                {% if rol == "DIG_ADMINISTRADOR" %}
                <th>Opciones</th>
                {% endif %}
            
            </tr>
        </thead>
        <tbody>
            {% for repa in reparticionesDeNorma %}
            <tr>
                <td>
                    {{ repa.id }}
                </td>
                <td>
                    {{ repa.nombre }}
                </td>
                {% if rol == "DIG_ADMINISTRADOR" %}
                <td>
                    <a  href="{{path('tipo_norma_reparticion_edit', {'id': repa.id,'t':tipoNorma.id})  }}"><button class="btn btn-info btn-sm d-inline-block float-left mr-1"><i class="fa-solid fa-pen-to-square"></i></button></a>
                    {{ include('tipo_norma_reparticion/_delete_form.html.twig') }}
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    {% if rol=="DIG_ADMINISTRADOR" %}
    <a href="{{ path('tipo_norma_reparticion_new',{'id': tipoNorma.id}) }}"> <button  type="button" class="btn btn-info btn-sm">Agregarle reparticion a {{tipoNorma}}</button> </a>
    {% endif %}
{% endblock %}
