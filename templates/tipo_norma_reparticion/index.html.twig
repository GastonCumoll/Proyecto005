{% extends 'base.html.twig' %}

{% block title %}TipoNormaReparticion index{% endblock %}
{% block addStyleSheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexAdmin') }}
    {{ encore_entry_link_tags('index') }}
{% endblock %}
{% block body %}
    <h1>Reparticiones del tipo de norma {{tipoNorma.nombre}}</h1>
<div class="container">
    {% if "DIG_ADMINISTRADOR" in roles %}
        <div id="contenedorBotonVolver" class="text-left mt-1">
            <a href="{{path('tipo_norma_index')}}" class="btn btn-outline-primary rounded-circle" id="botonVolverAtras"><i class="fa-solid fa-chevron-left"></i></a>
        </div>
        <a href="{{ path('tipo_norma_reparticion_new',{'id': tipoNorma.id}) }}"> <button title="AGREGAR REPARTICIÃ“N" type="button" class="btn btn-outline-info btn-sm ml-3">Agregar <i class="fa-solid fa-plus"></i></button> </a>
    {% endif %}
    <br>
    <br>
    <div class="table-responsive">
        <table class="table" id="tablaIndex">
            <thead id="headIndex">
            <tr>
                <th class="thOp">Id</th>
                <th class="thOp">Nombre</th>
                {% if "DIG_ADMINISTRADOR" in roles %}
                <th class="thOp">Opciones</th>
                {% endif %}
            
            </tr>
        </thead>
        <tbody  class="tbody">
            {% for repa in reparticionesDeNorma %}
            <tr>
                <td>
                    {{ repa.id }}
                </td>
                <td>
                    {{ repa.nombre }}
                </td>
                {% if "DIG_ADMINISTRADOR" in roles %}
                <td>
                    <a  href="{{path('tipo_norma_reparticion_edit', {'id': repa.id,'t':tipoNorma.id})  }}"><button title="EDITAR" class="btn btn-info btn-sm d-inline-block float-left mr-1"><img src="{{asset('build/imagenes/iconos/Editar.png')}}"  alt="" id="auditoriaIcon"></button></a>
                    {{ include('tipo_norma_reparticion/_delete_form.html.twig') }}
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
